package com.hummingbee.system;

import java.time.LocalDate;

public class DayUsage {
	// data members
	LocalDate day;
	double usage;
	
	public DayUsage() {
		day = null;
		usage = 0;
	}
	
	public DayUsage(LocalDate day) {
		this.day = day;
		usage = 0;
	}
	
	public void addUsage(double usage) {
		this.usage += usage;
	}
	
	public LocalDate getDay() {
		return day;
	}
}
