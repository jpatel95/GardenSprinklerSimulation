package com.hummingbee.system;

/**
 * The following class is a singleton class that will be used to maintain the ambient temperature
 * for the system. It will also maintain the min and max temperature thresholds that will
 * automatically turn on/off the system.
 * 
 * @author jimmypatel
 *
 */
public class Temperature {
	private static Temperature instance = null;
	private double degreesFarenheit;
	private double minThreshold;
	private double maxThreshold;
	private final incrementor = 10;
	//Private constructor for Singleton Class
	private Temperature(){
		this.degreesFarenheit = 60.0;
		this.minThreshold = 50.0;
		this.maxThreshold = 90.0;
	}
	
	//Getter for the single instance of the class.
	public static Temperature getInstance() {
		if(instance == null) {
				instance = new Temperature();
		}
		return instance;
	}
	
	//Method to increment the temperature
	public boolean incrementTemperature(){
		if(degreesFarenheit<120){
			degreesFarenheit += 10;
			return true;
		}
		return false;
	}
	
	public boolean decrementTemperature(){
		if(degreesFarenheit>-20){
			degreesFarenheit -= 10;
			return true;
		}
		return false;
	}

	//Setters and getters
	public boolean setTemperature(double degreesF){
		this.degreesFarenheit = degreesF;
		return true;
	}
	
	public boolean setMinTheshold(double degreesF){
		if(degreesF<0 || degreesF>125){
			return false;
		}
		this.minThreshold = degreesF;
		return true;
	}
	
	public boolean setMaxThreshold(double degreesF){
		if(degreesF<0 || degreesF>125){
			return false;
		}
		this.maxThreshold = degreesF;
		return true;
	}
	
	public double getTemperature(double degreesF){
		return this.degreesFarenheit;
	}
	
	public double getMinTheshold(double degreesF){
		return this.minThreshold;
	}
	
	public double getMaxThreshold(double degreesF){
		return this.maxThreshold;
	}
}
